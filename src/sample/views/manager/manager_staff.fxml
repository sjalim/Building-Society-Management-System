<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ManagerStaffController">
   <children>
      <TextField fx:id="search_text_field" layoutX="318.0" layoutY="22.0" prefHeight="46.0" prefWidth="553.0" promptText="Search(e.g.: john,01623987569)" styleClass="search-text-area" stylesheets="@../../styles/Staff.css" />

      <JFXButton fx:id="refreshButton" layoutX="1036.0" layoutY="36.0" onMouseClicked="#handleRefresh" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 4em; -fx-background-radius: 4em;" text="Refresh">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/refresh.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Century Gothic" size="14.0" />
         </font>
      </JFXButton>
      <TableView fx:id="table" layoutX="24.0" layoutY="163.0" prefHeight="486.0" prefWidth="1108.0">
        <columns>
          <TableColumn fx:id="name" prefWidth="250.0" text="Name" />
          <TableColumn fx:id="type" minWidth="0.0" prefWidth="165.0" text="Type" />
            <TableColumn fx:id="shift_start" prefWidth="173.0" text="Shift Start" />
            <TableColumn fx:id="shift_end" minWidth="0.0" prefWidth="206.0" text="Shift End" />
            <TableColumn fx:id="mobile" prefWidth="194.0" text="Mobile" />
            <TableColumn fx:id="present_address" minWidth="0.0" prefWidth="210.0" text="Present Address" />
            <TableColumn fx:id="permanent_address" minWidth="0.0" prefWidth="172.0" text="Permanent Address" />
            <TableColumn fx:id="age" minWidth="0.0" prefWidth="172.0" text="Age" />
            <TableColumn fx:id="salary" minWidth="0.0" prefWidth="152.0" text="Salary" />
            <TableColumn fx:id="nid" minWidth="0.0" prefWidth="165.0" text="NId" />
        </columns>
      </TableView>
      <ComboBox fx:id="type_combo_box" layoutX="543.0" layoutY="121.0" onAction="#handleTypeFilter" prefHeight="25.0" prefWidth="187.0" promptText="Staff Type" />
      <JFXTimePicker fx:id="start_time_timepicker" layoutX="777.0" layoutY="113.0" onAction="#handleFromTime" promptText="Start TIme" />
      <JFXTimePicker fx:id="end_time_timepicker" layoutX="951.0" layoutY="113.0" onAction="#handleToTime" promptText="End Time" />
      <JFXButton fx:id="add_button" layoutX="54.0" layoutY="102.0" onAction="#handleAdd" prefHeight="46.0" prefWidth="107.0" text="Add">
         <font>
            <Font size="25.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="update_button" layoutX="186.0" layoutY="102.0" onAction="#handleUpdate" prefHeight="54.0" prefWidth="115.0" text="Update">
         <font>
            <Font size="25.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="delete_button" layoutX="318.0" layoutY="102.0" onAction="#handleDelete" prefHeight="46.0" prefWidth="121.0" text="Delete">
         <font>
            <Font size="25.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
