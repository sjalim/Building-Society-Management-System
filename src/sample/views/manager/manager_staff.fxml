<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ManagerStaffController">
   <children>
      <TextField fx:id="search_text_field" layoutX="318.0" layoutY="22.0" prefHeight="46.0" prefWidth="553.0" promptText="Search(e.g.: john,01623987569)" styleClass="search-text-area" stylesheets="@../../styles/Staff.css" />
      <ImageView fx:id="search_image_view" fitHeight="31.0" fitWidth="31.0" layoutX="820.0" layoutY="30.0" onMouseClicked="#handleSearch" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/search.png" />
         </image>
      </ImageView>
      <Button fx:id="add_button" layoutX="102.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleAdd" prefHeight="31.0" prefWidth="113.0" text="Add">
         <font>
            <Font name="Trebuchet MS" size="30.0" />
         </font>
      </Button>
      <Button fx:id="update_text_field" layoutX="235.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="9.0" prefWidth="139.0" text="Update">
         <font>
            <Font name="Trebuchet MS" size="30.0" />
         </font>
      </Button>

      <JFXButton fx:id="refreshButton" layoutX="1065.0" layoutY="163.0" onMouseClicked="#handleRefresh" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 4em; -fx-background-radius: 4em;" text="Refresh">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/refresh.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Century Gothic" size="14.0" />
         </font>
      </JFXButton>
      <Button fx:id="delete_text_field" layoutX="386.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="18.0" prefWidth="131.0" text="Delete">
         <font>
            <Font name="Trebuchet MS" size="30.0" />
         </font>
      </Button>
      <TableView fx:id="table" layoutX="31.0" layoutY="200.0" prefHeight="501.0" prefWidth="1175.0">
        <columns>
          <TableColumn fx:id="name" prefWidth="250.0" text="Name" />
          <TableColumn fx:id="type" minWidth="0.0" prefWidth="165.0" text="Type" />
            <TableColumn fx:id="shift_start" prefWidth="173.0" text="Shift Start" />
            <TableColumn fx:id="shift_end" minWidth="0.0" prefWidth="206.0" text="Shift End" />
            <TableColumn fx:id="mobile" prefWidth="455.0" text="Mobile" />
        </columns>
      </TableView>
      <ComboBox fx:id="type_combo_box" layoutX="557.0" layoutY="114.0" prefHeight="25.0" prefWidth="270.0" promptText="Staff Type" />
      <Label fx:id="search_text_label" layoutX="31.0" layoutY="154.0" prefHeight="46.0" prefWidth="192.0" text="The search result for">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Label>
      <Label fx:id="search_key_label" layoutX="223.0" layoutY="166.0" text="Label">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
